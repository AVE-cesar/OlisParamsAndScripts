<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity AGACOrganization.
    -->
    <changeSet id="20151205153735" author="jhipster">
        <createTable tableName="agacorganization">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(100)"/>
            <column name="name" type="varchar(100)"/>
            <column name="type" type="bigint"/>
            <column name="status" type="bigint"/>
            <column name="root_organization" type="bigint"/>
            <column name="father_organization" type="bigint"/>
            <column name="theme" type="varchar(10)"/>
            <column name="email" type="varchar(30)"/>
            <column name="level" type="varchar(255)"/>
            <column name="internal" type="varchar(255)"/>
            <column name="creation_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="creator_user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="modification_date" type="date"/>
            <column name="updator_user_id" type="bigint"/>
        </createTable>
        
    </changeSet>
</databaseChangeLog>
